<Window x:Class="TypingGame.GameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Game Window" Height="450" Width="800" WindowStartupLocation="CenterScreen" Topmost="True" ResizeMode="NoResize">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10*"/>
            <ColumnDefinition Width="9*"/>
            <ColumnDefinition Width="61*"/>
        </Grid.ColumnDefinitions>
        <TextBlock x:Name="TextBlock_Template" HorizontalAlignment="Left" Height="304" Margin="20,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="570" IsEnabled="False" Focusable="True" ScrollViewer.VerticalScrollBarVisibility="Disabled" Grid.Column="1" Grid.ColumnSpan="2" FontSize="18">
            <TextBlock.Background>
                <SolidColorBrush Color="#FFF4F7EA" Opacity="0.4"/>
            </TextBlock.Background>
        </TextBlock>
        <TextBox x:Name="TB_Answer" Grid.Column="1" Grid.ColumnSpan="2" HorizontalAlignment="Left" Height="25" Margin="20,329,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="570" TextChanged="TextBox_TextChanged"/>

    </Grid>
</Window>
